# Production Environment Variables
# Copy this file to your Azure VM as .env and update the values
HOST=0.0.0.0
NODE_ENV=production
PORT=3015

# Database
MONGODB_URI=mongodb://localhost:27017/url-shortener-prod
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/url-shortener

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=super-secure-refresh-secret-key-minimum-32-characters-987654321

# Redis
REDIS_URL=redis://localhost:6379

# CORS
CNAME_TARGET=cname.shortener.laghhu.link
APP_URL=https://shortener.laghhu.link
ALLOWED_ORIGINS=http://20.193.155.139,https://shortener.laghhu.link,https://laghhu.link

# Rate Limiting
RATE_LIMIT=100

# Cache TTL
CACHE_TTL_URL_CACHE=3600
CACHE_TTL_DOMAIN_CACHE=300


# Email (if you plan to add email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password