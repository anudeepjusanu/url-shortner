# Server Configuration
PORT=3015
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/url-shortener

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_key_min_32_characters
JWT_REFRESH_SECRET=your_secure_refresh_secret_key_min_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Application
BASE_URL=http://localhost:3015
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT=100

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# Stripe Payment (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Feature Flags
TRACK_CLICKS=true
TRACK_GEOLOCATION=true
TRACK_USER_AGENT=true
TRACK_REFERRER=true

# Security
BCRYPT_ROUNDS=12
ENABLE_HTTPS=false

# Short Code Configuration
DEFAULT_SHORT_CODE_LENGTH=6
MIN_SHORT_CODE_LENGTH=4
MAX_SHORT_CODE_LENGTH=12
